<Window x:Class="P2P.PeerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2P.PeerClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="351" Width="523.8"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid>
        <Button Click="FindPeersClickButton" Margin="224,230,182.6,61.6">Find Peers</Button>
        <StackPanel
            Name="PeerListPanel" x:FieldModifier="public" Margin="10,10,351.4,9.8" Background="Azure">
        </StackPanel>
        <TextBlock Margin="172,10,10.6,104.6" Background="Azure" Name="MessagesHistoryTextBlock"></TextBlock>
        <TextBox Margin="171,287,72.6,9.8" RenderTransformOrigin="0.5,0.5" Height="24" Name="MessageTextBox">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="360.0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="SendMessageButton" Margin="450,287,10.6,9.8" Click="SendMessageClick">Send</Button>
    </Grid>
</Window>
