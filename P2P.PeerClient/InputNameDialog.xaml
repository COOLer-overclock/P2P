<Window x:Class="P2P.PeerClient.InputNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2P.PeerClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Input Name" Height="100" Width="250">
    <Grid>
        <TextBlock Text="Your name: " Margin="5,13,180,35" />
        <TextBox x:Name="ResponseTextBox" Margin="75,10,5,35"/>
        <Button Content="OK" Click="OKButton_Click" Margin="5,40,150, 5" />
        <Button Content="Cancel" Click="CancelButton_Click" Margin="150,40,5,5" ></Button>
    </Grid>
</Window>
